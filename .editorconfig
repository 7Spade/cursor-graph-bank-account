# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript and JavaScript files
[*.{ts,js,tsx,jsx}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# CSS and SCSS files
[*.{css,scss,sass}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Package.json
[package.json]
indent_size = 2

# Angular specific files
[angular.json]
indent_size = 2

[tsconfig*.json]
indent_size = 2

# TypeScript specific settings
[*.ts]
quote_type = single
ij_typescript_use_double_quotes = false

# Docker files
[Dockerfile*]
indent_size = 2

[docker-compose*.yml]
indent_size = 2
